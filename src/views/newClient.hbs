<form method="POST">
  <div class="mb-3">
    <input placeholder="Фамилия" name="surname" type="text" class="form-control" required />
  </div>
  <div class="mb-3">
    <input placeholder="Имя" name="name" type="text" class="form-control" required />
  </div>
  <div class="mb-3">
    <input placeholder="Отчество" name="patronymic" type="text" class="form-control" required />
  </div>
  <div class="mb-3">
    <input placeholder="email" name="email" type="email" class="form-control" required />
  </div>
  <div class="mb-3">
    <input placeholder="Номер телефона" name="phone" type="tel" class="form-control" required />
  </div>
  <div class="mb-3">
    <input placeholder="Адрес" name="address" type="text" class="form-control" required />
  </div>
  <button type="submit" class="btn btn-primary">Добавить клиента</button>
</form>
